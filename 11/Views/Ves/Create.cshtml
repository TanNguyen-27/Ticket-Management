    </div>

    <div class="form-group">
        <label for="TicketImage">Ảnh Vé</label> <br />

        <!-- File Input -->
        <input id="TicketImage" name="file" type="file" class="form-control" onchange="previewImage(event)" />

        <!-- Image Preview -->
        <br />
        <img id="preview"
             style="width:100px; height:auto; display:block; margin-top:10px;">
    </div>

    <div asp-validation-summary="All"></div>

    <button type="submit" class="btn btn-primary">Tạo Vé</button>
    <button type="reset">Reset</button>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    var preview = document.getElementById("preview");

    function previewImage(event) {
        var input = event.target;

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                preview.src = e.target.result;
            };

            reader.readAsDataURL(input.files[0]);
        }
    }

    // Fix for reset button
    addEventListener("reset", function (event) {
        // Resetting the preview image to the default empty state
        preview.src = "";
    });

</script>