    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MaSuKien) <br />
        @Html.EditorFor(model => model.MaSuKien, new { htmlAttributes = new { @class = "form-control" } })<br />
        @Html.ValidationMessageFor(model => model.MaSuKien, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LoaiVe) <br />
        @Html.EditorFor(model => model.LoaiVe, new { htmlAttributes = new { @class = "form-control" } })<br />
        @Html.ValidationMessageFor(model => model.LoaiVe, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.GiaVe) <br />
        @Html.EditorFor(model => model.GiaVe, new { htmlAttributes = new { @class = "form-control" } })<br />
        @Html.ValidationMessageFor(model => model.GiaVe, "", new { @class = "text-danger" })
